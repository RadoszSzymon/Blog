<% @posts.each do |post| %>
	<div class="row post_row">
		<div class="col-md-4">
			<%= link_to (image_tag post.image.url(:medium), class: 'image'), post %>
		</div>
		<div class="col-md-8">
				<h2 class="title"><%= link_to post.title, post %></h2>
				<p class="date"><%= post.created_at.strftime("%B %d, %Y") %></p>
				<h4><%= post.body[0,50] %> ...</h3>
		</div>
	</div>
<% end %>
