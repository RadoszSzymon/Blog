<div class="row blog">
    <h2>Blog</h2>

    <div class="posts_loop">
    	<% @posts.each do |post| %>
	    	<div class="col-md-6">
	    		<div class="post_index">
	    			<%= link_to (image_tag post.image.url(:medium)), post %>
	    			<h3><%= link_to post.title, post %></h3>
	    		</div>
	    	</div>
    	<% end %>
    </div>
</div>
