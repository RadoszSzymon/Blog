<!DOCTYPE html>
<html>
<head>
  <title>SimpleDreams Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="jumbotron">
    <div class="row page_wrapper">
      <div class="col-md-4 sidebar">

        <h3 class="page_title"><%= link_to "SimpleDreams", root_path %></h3>
        <h4 class="sidebar_link"><%= link_to "Blog", posts_path %></h4>
        <h4 class="sidebar_link"><%= link_to "Bucket List", about_path %></h4>
        <div class="social_section">
          <div class="social_option">
            <a href="https://www.google.pl/"><%= fa_icon "facebook" %><span class="icon_desc"> Facebook </span></a>
          </div>
          <div class="social_option">
            <a href="https://www.google.pl/"><%= fa_icon "twitter" %><span class="icon_desc"> Twitter </span></a>
          </div>
          <div class="social_option">
            <a href="https://www.google.pl/"><%= fa_icon "instagram" %><span class="icon_desc"> Instagram </span></a>
          </div>
        </div>

          <% if user_signed_in? %>
            <div class="admin_options">
              <div class="sidebar_link">
                <%= link_to "New Post", new_post_path %>
              </div>
              <div class="sidebar_link">
                <%= link_to 'Log Out', destroy_user_session_path, :method => :delete %>
              </div>
            </div>
          <% end %>

        </div>
        <div class="col-md-6 col-md-offset-1 content">
          <%= yield %>
        </div>
      </div>
    </div>

  </div>
</body>
</html>
